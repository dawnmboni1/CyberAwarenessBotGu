<Window x:Class="CyberAwarenessBotGu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Cybersecurity Awareness Chatbot" Height="500" Width="800"
        Background="Black">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Heading + Logo -->
            <RowDefinition Height="*" />
            <!-- Chat area -->
            <RowDefinition Height="Auto" />
            <!-- Input area -->
        </Grid.RowDefinitions>

        <!-- Row 0: Heading and Logo -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center">
            <TextBlock Text="Cybersecurity Awareness Chatbot"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="Red"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <Image Source="images/Welcome.png"
                   Height="100"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,10"/>
        </StackPanel>

        <!-- Row 1: Chat Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ChatPanel" />
        </ScrollViewer>

        <!-- Row 2: Input Area -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBox x:Name="UserInputBox" Width="600" Height="30" Margin="0,0,10,0" />
            <Button Content="Send"
                    Width="100"
                    Height="30"
                    Background="Green"
                    Click="SendButton_Click" />
        </StackPanel>
    </Grid>
</Window>
